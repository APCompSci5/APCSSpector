package ch5;
import java.awt.*;
import java.applet.*;


public class GraphicsLab02st extends Applet{
	public void paint(Graphics g)
	{

		int width = 980;
		int height = 630;
		g.drawRect(10,10,width,height);
		int v1 =10;
		int v2 =640;
		int v3 =990;
		int v4 =20;
		int v5 =12;
		// Draw bottom-right corner
						for(int i=0; i<=49; i++){
							g.drawLine(v1+(i*v4),v2,v3, v2-(i*v5));
						}

			}
	}
		
	
		
			